<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_itemList"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_icRickMorty"
            android:layout_width="@dimen/width_150"
            android:layout_height="@dimen/height_150"
            android:contentDescription="@string/personage_rick_and_morty"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_rick_morty"
            app:layout_constraintBottom_toTopOf="@+id/text_namePersonage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_namePersonage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/name_personage"
            android:background="@color/dark_blue"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/image_icRickMorty"
            app:layout_constraintRight_toRightOf="@id/image_icRickMorty"
            app:layout_constraintLeft_toLeftOf="@id/image_icRickMorty"
            android:textSize="@dimen/size_14"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>